{
  "name": "shadow-war-armageddon-roster",
  "description": "Roster builder for Shadow War: Armageddon.",
  "version": "1.3.4",
  "author": "Adam Marshall <adam@appsynergy.net>",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --hot",
    "build:webpack": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "build:copy": "cp index.html public/ && cp -r dist/ public/",
    "build:clean": "rm -rf public/ && mkdir public && rm -rf dist/ && mkdir dist",
    "build": "npm run build:clean && npm run build:webpack && npm run build:copy",
    "publish:github": "node ghpublish.js",
    "publish": "npm run build && npm run publish:github",
    "test": "karma start karma.conf.js || true",
    "test:watch": "npm run test && onchange test/spec/*.coffee -- npm run test"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "bootstrap": "^4.0.0-alpha.6",
    "jspdf": "^1.3.3",
    "underscore": "^1.8.3",
    "vue": "^2.2.1",
    "vue-disqus": "^2.0.3",
    "vue-localstorage": "^0.1.3",
    "vue-router": "^2.3.1",
    "vuedraggable": "^2.10.0",
    "vuex": "^2.2.1"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-latest": "^6.0.0",
    "coffee-loader": "^0.7.3",
    "coffee-script": "^1.12.4",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "es6-promise": "^4.1.0",
    "file-loader": "^0.9.0",
    "gh-pages": "^0.12.0",
    "inject-loader": "^2.0.1",
    "jasmine-core": "^2.5.2",
    "karma": "^1.6.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-webpack": "^2.0.3",
    "node-sass": "^4.5.0",
    "onchange": "^3.2.1",
    "phantomjs": "^2.1.7",
    "sass-loader": "^5.0.1",
    "toml": "^2.3.2",
    "toml-loader": "^1.0.0",
    "url-loader": "^0.5.8",
    "vue-loader": "^11.1.4",
    "vue-template-compiler": "^2.2.1",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0"
  }
}
